    document.getElementById('text_amount').value = "{{ request.params.amount || ref(pay.paysystems).0.amount }}";
    document.getElementById('price_text').value = "{{ request.params.amount || ref(pay.paysystems).0.amount }}";
    ShmPayApp.init();
